
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProductLayout</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-md navbar-light bg-light fixed-top">
        @Html.ActionLink("Product", "Index", "Product", new { area = "" }, new { @class = "navbar-brand" })
        <ul class="navbar-nav">
            <li class="nav-item">@Html.ActionLink("Home", "Index", "Product", new { @class = "nav-link text-black" })</li>
            <li class="nav-item">@Html.ActionLink("About", "About", "Product", new { @class = "nav-link text-black" })</li>
            <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Product", new { @class = "nav-link text-black" })</li>
        </ul>
    </nav>

    <div class="container body-content mb-2">
        @RenderBody()
    </div>
</body>
</html>
