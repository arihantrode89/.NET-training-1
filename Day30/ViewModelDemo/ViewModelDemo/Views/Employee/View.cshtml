@model ViewModelDemo.ViewModels.EmployeeDetailsViewModel 
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Html.DisplayFor(m=>m.PageTitle)</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <h1>@Html.DisplayFor(m=>m.PageHeader)</h1>
    <section class="px-2 py-2"> 
        <table class="table-bordered text-center">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Employee.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Employee.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Employee.Gender)</th>
                <th>@Html.DisplayNameFor(model => model.Employee.Department)</th>
                <th>@Html.DisplayNameFor(model => model.Employee.Salary)</th>
                <th>@Html.DisplayNameFor(model => model.Address.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Address.Country)</th>
                <th>@Html.DisplayNameFor(model => model.Address.State)</th>
                <th>@Html.DisplayNameFor(model => model.Address.City)</th>
                <th>@Html.DisplayNameFor(model => model.Address.PostalCode)</th>
            </tr>

            <tr>
                <td>@Html.DisplayFor(model => model.Employee.Id)</td>
                <td>@Html.DisplayFor(model => model.Employee.Name)</td>
                <td>@Html.DisplayFor(model => model.Employee.Gender)</td>
                <td>@Html.DisplayFor(model => model.Employee.Department)</td>
                <td>@Html.DisplayFor(model => model.Employee.Salary)</td>
                <td>@Html.DisplayFor(model => model.Address.Id)</td>
                <td>@Html.DisplayFor(model => model.Address.Country)</td>
                <td>@Html.DisplayFor(model => model.Address.State)</td>
                <td>@Html.DisplayFor(model => model.Address.City)</td>
                <td>@Html.DisplayFor(model => model.Address.PostalCode)</td>
            </tr>
        </table>
    </section>
</body>
</html>
