
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script src="~/lib/jquery/dist/jquery-3.6.0.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    
    <script src="~/js/Custom.js"></script>

</head>
<body style="background-color:black">
    <section class="mt-3 pt-3">
        <div class="container-md py-3" style="width:400px;">
            <div class="card">
                <div class="card-header">
                    <h6 class="align-content-center">User Profile</h6>
                </div>
                <div class="card-body">
                    <pre>User Name: <label id="NameLbl" >Text</label><br />Email: <label id="EmailLbl"></label><br />Role: <label id="RoleLbl"></label>
                    </pre>
                </div>
                <div class="card-footer">
                    <div class="mx-auto d-grid col-3">
                        <button class="btn btn-primary btn-md mb-2" type="submit" id="logoutbtn" onclick="Logout();">Log Out</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
