
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="~/Scripts/Custom.js"></script>

</head>
<body style="background-color:black">
    <section class="mt-3 pt-3">
        <div class="container-md py-3 bg-white rounded-3" style="width:400px;">
            <form action="Login/Login" method="post">
                <div class="row mb-2 px-2 py-2">
                    <div class="col py-2">
                        <input type ="text" id="UserName" name ="UserName" class="form-control" placeholder="Enter UserName">
                    </div>
                </div>

                <div class="row mb-2 px-2 py-2">
                    <div class="col py-2">
                        <input id="Password" name ="Password" type ="text" class="form-control" placeholder="Enter UserName">
                    </div>
                </div>
                <div class="mx-auto d-grid col-3">
                    <button class="btn btn-primary btn-md mb-2" type="submit" id="loginbtn" @*onclick="Login();"*@>Login</button>
                </div>

            </form>
        </div>
    </section>
</body>
</html>
