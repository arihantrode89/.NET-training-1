@model IEnumerable<MondayAssesment.Models.Employee>

@{
    ViewBag.Title = "GetEmployees";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}

<div class="row px-2 py-2">
    @foreach (var item in Model)
    {
        <div class="col py-2">

            <div class="card" style="width: 500px; background-color: rgb(0 0 0 / 20%);">

                <div class="card-header">
                    Employee
                </div>
                <div class="card-body">
                    <pre>
                Employee Name:@item.Name
                Employee Gender:@item.Gender
                Employee City:@item.City
                Employee Salary:@item.Salary
                </pre>
                </div>
                <div class="card-footer text-center">
                    @Html.ActionLink("Edit", "UpdateEmployee", new { id = item.EmployeeId }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "DeleteEmployee", new { id = item.EmployeeId }, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    }
</div>

